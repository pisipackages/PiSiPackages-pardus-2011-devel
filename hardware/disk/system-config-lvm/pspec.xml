    </Source>

    <Package>
        <Name>system-config-lvm</Name>
        <RuntimeDependencies>
            <Dependency>gtk2</Dependency>
            <Dependency>python-gtk</Dependency>
            <Dependency>lvm2</Dependency>
            <Dependency>gnome-python</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/sbin</Path>
