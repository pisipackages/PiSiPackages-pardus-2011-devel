    <Package>
        <Name>python-qt-devel</Name>
        <Summary>Development files for python-qt</Summary>
        <RuntimeDependencies>
            <Dependency>qt-devel</Dependency>
            <Dependency release="current">python-qt</Dependency>
            <Dependency release="current">python-qt-webkit</Dependency>
            <Dependency release="current">python-qt-phonon</Dependency>
            <Dependency versionFrom="4.12.2">sip-devel</Dependency>
        </RuntimeDependencies>
        <Conflicts>
            <Package releaseTo="45">PyQt-webkit</Package>
            <Package releaseTo="45">PyQt-phonon</Package>
        </Conflicts>
        <Replaces>
            <Package>PyQt-devel</Package>
        </Replaces>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="data">/usr/share/sip</Path>
        </Files>
    </Package>

    <Package>
        <Name>python-qt</Name>
        <RuntimeDependencies>
            <Dependency versionFrom="4.7.1">qt</Dependency>
            <Dependency versionFrom="4.12.2">sip</Dependency>
        </RuntimeDependencies>
        <Replaces>
            <Package>PyQt</Package>
        </Replaces>
        <Files>
            <Path fileType="library">/usr/lib</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="data">/usr/share/qt4/qsci</Path>
            <Path fileType="library">/usr/lib/qt4/plugins/designer</Path>
        </Files>
    </Package>

    <Package>
        <Name>python-qt-webkit</Name>
        <Summary>Python bindings for QtWebkit library</Summary>
        <RuntimeDependencies>
            <Dependency release="current">python-qt</Dependency>
            <Dependency versionFrom="4.7.1">qt-webkit</Dependency>
        </RuntimeDependencies>
        <Conflicts>
            <!-- PyQt-webkit is a seperate package -->
            <Package releaseTo="42">PyQt</Package>
        </Conflicts>
        <Replaces>
            <Package>PyQt-webkit</Package>
        </Replaces>
        <Files>
            <Path fileType="library">/usr/lib/python*/site-packages/PyQt4/*WebKit*</Path>
            <Path fileType="library">/usr/lib/python*/site-packages/PyQt4/uic/widget-plugins/*webkit*</Path>
        </Files>
    </Package>

    <Package>
        <Name>python-qt-phonon</Name>
        <Summary>Python bindings for Phonon multimedia library</Summary>
        <RuntimeDependencies>
            <Dependency release="current">python-qt</Dependency>
            <Dependency versionFrom="4.4.4">phonon</Dependency>
        </RuntimeDependencies>
        <Conflicts>
            <!-- PyQt-phonon is a seperate package -->
            <Package releaseTo="42">PyQt</Package>
        </Conflicts>
        <Replaces>
            <Package>PyQt-phonon</Package>
        </Replaces>
        <Files>
            <Path fileType="library">/usr/lib/python*/site-packages/PyQt4/*phonon*</Path>
            <Path fileType="library">/usr/lib/python*/site-packages/PyQt4/uic/widget-plugins/*phonon*</Path>
        </Files>
    </Package>

    <Package>
        <Name>python-qt-docs</Name>
        <Summary>Documentation for python-qt bindings</Summary>
        <RuntimeDependencies>
            <Dependency release="current">python-qt</Dependency>
        </RuntimeDependencies>
