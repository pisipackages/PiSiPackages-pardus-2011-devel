    <Package>
        <Name>bangarang</Name>
        <RuntimeDependencies>
            <Dependency>qt</Dependency>
            <Dependency>taglib</Dependency>
            <Dependency>phonon</Dependency>
            <Dependency>soprano</Dependency>
            <Dependency>kdelibs</Dependency>
            <Dependency>shared-desktop-ontologies</Dependency>
