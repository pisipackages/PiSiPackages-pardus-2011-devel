        </Patches>
    </Source>

    <Package>
        <Name>libmikmod</Name>
        <RuntimeDependencies>
            <Dependency>audiofile</Dependency>
            <Dependency>alsa-lib</Dependency>
        </RuntimeDependencies>
        <Files>
