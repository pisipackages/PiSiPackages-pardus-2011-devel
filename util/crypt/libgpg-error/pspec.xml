            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="localedata">/usr/share/locale</Path>
        </Files>
    </Package>

    <Package>
        <Name>libgpg-error-devel</Name>
        <Summary>Development files for libgpg-error</Summary>
