            <AdditionalFile owner="root" permission="0644" target="/etc/pam.d/screen">screen.pam.system-auth</AdditionalFile>
        </AdditionalFiles>
        <Provides>
            <COMAR script="package.py">System.Package</COMAR>
        </Provides>
    </Package>

