        </Patches>
    </Source>

    <Package>
        <Name>pam_pkcs11</Name>
        <RuntimeDependencies>
            <Dependency>nss</Dependency>
            <Dependency>nspr</Dependency>
            <Dependency>pcsc-lite</Dependency>
            <Dependency>openldap-client</Dependency>
