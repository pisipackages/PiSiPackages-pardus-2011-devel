            <Path fileType="data">/etc/pam_pkcs11</Path>
            <Path fileType="data">/usr/share/pam_pkcs11</Path>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="man">/usr/share/man</Path>
        </Files>
        <AdditionalFiles>
            <!-- Out-of-the-box configuration file for AKIS -->
