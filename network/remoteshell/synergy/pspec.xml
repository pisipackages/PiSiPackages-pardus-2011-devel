            <Dependency>libXinerama-devel</Dependency>
            <Dependency>libICE-devel</Dependency>
            <Dependency>libSM-devel</Dependency>
            <Dependency>qt-devel</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
        <Name>synergy</Name>
        <RuntimeDependencies>
