    <Package>
        <Name>libpst</Name>
        <IsA>app:console</IsA>
        <IsA>library</IsA>
        <RuntimeDependencies>
            <Dependency>gd</Dependency>
            <Dependency>boost</Dependency>
        </RuntimeDependencies>
        <Files>
