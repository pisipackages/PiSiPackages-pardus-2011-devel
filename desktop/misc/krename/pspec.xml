            <Dependency>taglib-devel</Dependency>
            <Dependency>podofo-devel</Dependency>
            <Dependency>exiv2-devel</Dependency>
            <Dependency>freetype-devel</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
