        <Summary>KDE splash theme for Pardus</Summary>
        <Description>ksplash-theme-pardus contains a modified and polished KSplash theme for Pardus.</Description>
        <Archive sha1sum="e1412cfda5d5469f1c3a60def1e68052b35e1a82" type="tarlzma">http://cekirdek.pardus.org.tr/~gokcen/files/ksplash-pardus-theme-20110113.tar.lzma</Archive>
    </Source>

    <Package>
        <Name>ksplash-theme-pardus</Name>
        <RuntimeDependencies>
            <Dependency versionFrom="4.5.2">kdebase-workspace</Dependency>
        </RuntimeDependencies>
        <Replaces>
            <Package>ksplash-pardus-theme-kde4</Package>
            <Package>ksplash-pardus-theme</Package>
        </Replaces>
        <Files>
            <Path fileType="data">/usr/share/kde4/apps/ksplash/Themes/Pardus</Path>
        </Files>
    </Package>

    <Package>
        <Name>ksplash-theme-pardus-milky</Name>
        <RuntimeDependencies>
            <Dependency versionFrom="4.5.2">kdebase-workspace</Dependency>
        </RuntimeDependencies>
        <Replaces>
            <Package>ksplash-pardus-theme-kde4</Package>
            <Package>ksplash-pardus-theme-milky</Package>
        </Replaces>
        <Files>
            <Path fileType="data">/usr/share/kde4/apps/ksplash/Themes/Pardus-Milky</Path>
        </Files>
    </Package>

